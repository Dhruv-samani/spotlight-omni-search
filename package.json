{
  "name": "spotlight-omni-search",
  "version": "2.3.1",
  "type": "module",
  "description": "Universal Command Palette & Global Search for React",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.umd.js"
    },
    "./react": {
      "types": "./dist/integrations/react.d.ts",
      "import": "./dist/integrations/react.mjs"
    },
    "./next": {
      "types": "./dist/integrations/next.d.ts",
      "import": "./dist/integrations/next.mjs"
    },
    "./style.css": "./dist/spotlight-omni-search.css",
    "./spotlight-omni-search.css": "./dist/spotlight-omni-search.css"
  },
  "keywords": [
    "react",
    "command-palette",
    "spotlight",
    "search",
    "omnibox",
    "tailwindcss",
    "nextjs",
    "typescript",
    "fuzzy-search",
    "keyboard-navigation"
  ],
  "author": "Dhruv",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "lucide-react": ">=0.400.0"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.10.8",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.0",
    "jsdom": "^26.0.0",
    "@types/node": "^22.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0"
  }
}
