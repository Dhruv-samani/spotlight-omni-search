{
  "name": "spotlight-omni-search",
  "version": "2.5.0",
  "type": "module",
  "description": "⚡ Professional Command Palette (⌘K) for React & Next.js - Tailwind-native, 20+ themes, built-in calculator, unit converter, recent searches, bookmarks, shortcuts panel. Alternative to cmdk/kbar.",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Dhruv-samani/spotlight-omni-search"
  },
  "homepage": "https://spotlight-omni-search-docs.netlify.app/",
  "bugs": {
    "url": "https://github.com/Dhruv-samani/spotlight-omni-search/issues"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "bin": {
    "spotlight-init": "./bin/spotlight-init.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.umd.js"
    },
    "./react": {
      "types": "./dist/integrations/react.d.ts",
      "import": "./dist/integrations/react.mjs"
    },
    "./next": {
      "types": "./dist/integrations/next.d.ts",
      "import": "./dist/integrations/next.mjs"
    },
    "./style.css": "./dist/spotlight-omni-search.css",
    "./spotlight-omni-search.css": "./dist/spotlight-omni-search.css"
  },
  "keywords": [
    "react",
    "command-palette",
    "spotlight",
    "search",
    "omnibox",
    "tailwindcss",
    "nextjs",
    "typescript",
    "fuzzy-search",
    "keyboard-navigation",
    "calculator",
    "math",
    "calculation",
    "expression-evaluator",
    "unit-converter",
    "conversion",
    "bookmarks",
    "favorites",
    "recent-searches",
    "search-history",
    "keyboard-shortcuts",
    "shortcuts-panel",
    "command-aliases",
    "utility",
    "cmdk",
    "command-k",
    "cmd-k",
    "kbar",
    "command-menu",
    "react-component",
    "ui-component",
    "search-component",
    "autocomplete",
    "combobox",
    "command-bar",
    "spotlight-search",
    "global-search",
    "quick-search",
    "react-search"
  ],
  "author": "Dhruv",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "peerDependenciesMeta": {
    "lucide-react": {
      "optional": true
    }
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.10.8",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.0",
    "@storybook/addon-essentials": "^8.4.0",
    "@storybook/addon-interactions": "^8.4.0",
    "@storybook/addon-onboarding": "^8.4.0",
    "@storybook/blocks": "^8.4.0",
    "@storybook/react": "^8.4.0",
    "@storybook/react-vite": "^8.4.0",
    "@storybook/test": "^8.4.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.0",
    "jsdom": "^26.0.0",
    "lucide-react": "^0.562.0",
    "postcss": "^8.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.12.0",
    "storybook": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.0.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.0"
  }
}
